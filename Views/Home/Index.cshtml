@{
    ViewBag.Title = "Home Page";
    if (Session["LoginId"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<h2>Dashboard</h2>
<div class="container">
    <h2>Ürünler</h2>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Yeni Ürün Ekle</button><br /><br />
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Product Name
                </th>
                <th>
                    Product Stok
                </th>
                <th>
                    Product Description
                </th>
            </tr>
        </thead>
        <tbody class="tbody">
        </tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Ürün Ekle</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="ProductId">ID</label>
                        <input type="text" class="form-control" id="ProductId" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="ProductName">Ürün Adı:</label>
                        <input type="text" class="form-control" id="ProductName" placeholder="Ürün Adı" />
                    </div>
                    <div class="form-group">
                        <label for="ProductStok">Stok:</label>
                        <input type="text" class="form-control" id="ProductStok" placeholder="Ürün Stok" />
                    </div>
                    <div class="form-group">
                        <label for="ProductDescription">Ürün Açıklama:</label>
                        <input type="text" class="form-control" id="ProductDescription" placeholder="Ürün Açıklaması" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Ekle</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="return Update();">Düzenle</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>